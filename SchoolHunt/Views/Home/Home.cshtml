@{
    ViewBag.Title = "Home";
}

<link rel="stylesheet" href="~/Content/Site.css" />
<div class="overlay-wrapper">
    <div class="overlay-content text-white">
        <h2 class="text-center mb-4">
            <i class="bi bi-search"></i> Find a School
        </h2>

        <p class="text-center mb-4">
            Discover the best schools based on location, type, and affordability.
        </p>

        <div class="card shadow p-4 mb-5 bg-light text-dark">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input class="form-control" type="search" name="query" placeholder="Search by Address or Name" aria-label="Search">
                    </div>

                    <div class="col-md-2">
                        <select name="type" class="form-select">
                            <option value="">-- Type --</option>
                            <option value="Public">Public</option>
                            <option value="Private">Private</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <select name="level" class="form-select">
                            <option value="">-- Level --</option>
                            <option value="Preschool">Preschool</option>
                            <option value="Elementary">Elementary</option>
                            <option value="High School">High School</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <input type="number" name="maxTuition" class="form-control" placeholder="Max Tuition (₱)" />
                    </div>

                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-dark">Search</button>
                    </div>
                </div>
            </form>
        </div>

        <blockquote class="text-center fst-italic text-white">
            "Education is the most powerful weapon which you can use to change the world." – Nelson Mandela
        </blockquote>
    </div>
</div>




